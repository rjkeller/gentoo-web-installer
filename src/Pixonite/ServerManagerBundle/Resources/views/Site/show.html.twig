{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Site</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>USE flags</th>
                <td>{{ entity.useFlags }}</td>
            </tr>
            <tr>
                <th>App Flags</th>
                <td>{{ entity.appFlags }}</td>
            </tr>
            <tr>
                <th>Code Checkout Command</th>
                <td>{{ entity.codeCheckoutCommand }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('site') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('site_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
